<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/enter_quantity_search_files"
        android:id="@+id/tv_search_summary"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lv_search_folders"
        android:layout_below="@+id/et_files_quantity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btn_add_folders" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:text="@string/num_of_default_search_files"
        android:id="@+id/et_files_quantity"
        android:textAlignment="center"
        android:layout_below="@+id/tv_search_summary"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal" />
    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Start search"
        android:background="@drawable/custom_button"
        android:id="@+id/btn_start_search"
        android:padding="8dp"
        android:drawablePadding="8dp"
        android:textAllCaps="true"
        android:gravity="left|center_vertical"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_action_search"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/select_folders"
        android:background="@drawable/custom_button"
        android:id="@+id/btn_add_folders"
        android:padding="8dp"
        android:drawablePadding="8dp"
        android:textAllCaps="true"
        android:gravity="left|center_vertical"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_file_folder_white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>